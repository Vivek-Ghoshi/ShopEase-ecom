<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Cart Container -->
  <div class="container mx-auto mt-10">
    <h1 class="text-3xl font-bold text-center mb-10">Your Shopping Cart</h1>
    <!-- Cart Items List -->
    <div class="bg-white shadow-lg rounded-lg p-6">
      <table class="min-w-full table-auto">
        <thead>
          <tr class="text-left font-bold text-gray-700">
            <th class="px-4 py-2">Product</th>
            <th class="px-4 py-2">Quantity</th>
            <th class="px-4 py-2">Price</th>
            <th class="px-4 py-2">Total</th>
          </tr>
        </thead>
        <tbody>
          <!-- Sample Product Row -->
          
            
           <% user.cart.forEach(function(item){%>

            <tr class="border-b border-gray-200">
              <!-- Product Image and Name -->
              <td class="px-4 py-4 flex items-center space-x-4">
                <img class="w-20 h-20 rounded-md object-cover" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="product Image">
                <span class="text-lg font-medium text-gray-800"><%= item.name %></span>
              </td>
              
              <!-- Quantity Control -->
              <td class="px-4 py-4">
                <div class="flex items-center space-x-2">
                  <button class="px-2 py-1 bg-gray-300 rounded">-</button>
                  <span class="text-lg font-semibold text-gray-700">1</span>
                  <button class="px-2 py-1 bg-gray-300 rounded">+</button>
                </div>
              </td>
  
              <!-- Product Price -->
              <td class="px-4 py-4 text-lg font-semibold text-gray-800"><%= item.price %></td>
  
              <!-- Total Price for Product -->
              <td class="px-4 py-4 text-lg font-semibold text-gray-800"><%= item.price %></td>
            </tr>
          <% })%>
  
          

          <!-- Add more product rows here if needed -->
        </tbody>
      </table>

      <!-- Total Price and Buy Now Button -->
      <div class="mt-6 flex justify-between items-center">
        <div class="text-xl font-bold text-gray-800"></div>

        <!-- Buy Now Button -->
         <a href="/order" class="px-8 py-3 bg-blue-500 text-white text-lg font-semibold rounded hover:bg-blue-600 transition"> Buy Now</a>
      
      </div>
    </div>

    <!-- If Cart is Empty (Just a UI for now) -->
    <div class="text-center mt-10">
      
      <a href="/profile" class="mt-5 inline-block px-5 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">Continue Shopping</a>
    </div>

  </div>

</body>
</html>
