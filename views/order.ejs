<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Confirmation</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Tick mark animation */
    @keyframes tick {
      0% { stroke-dashoffset: 100; }
      100% { stroke-dashoffset: 0; }
    }
    
    .tick {
      stroke-dasharray: 100;
      stroke-dashoffset: 100;
      animation: tick 1s ease forwards;
    }

    /* Pulse animation for order readiness */
    @keyframes pulse {
      0%, 100% {
        opacity: 1;
      }
      50% {
        opacity: 0.5;
      }
    }

    .pulse {
      animation: pulse 1s infinite;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col justify-center items-center">
  <!-- Order Confirmation Box -->
  <div id="order-confirmation" class="bg-white p-8 rounded-lg shadow-lg text-center space-y-4">
    <h1 class="text-2xl font-bold text-green-600">Order Placed!</h1>
    
    <!-- Animated tick mark -->
    <svg class="mx-auto w-16 h-16 text-green-500" viewBox="0 0 52 52">
      <circle class="stroke-current text-green-300" cx="26" cy="26" r="25" fill="none" stroke-width="4"></circle>
      <path class="tick stroke-current" fill="none" stroke-width="4" d="M14 27l10 10L38 16" stroke-linecap="round" stroke-linejoin="round"></path>
    </svg>

    <!-- Confirmation message -->
    <p class="text-lg text-gray-700">Your order has been successfully placed.</p>
    
    <!-- Payment option (Cash on Delivery) -->
    <div class="bg-gray-200 p-4 rounded-md">
      <p class="text-sm text-gray-600">Payment option:</p>
      <p class="text-lg font-semibold">Cash on Delivery</p>
    </div>
    
    <!-- Order status section with animated readiness pulse -->
    <div class="mt-6">
      <p class="text-gray-700 font-medium">Your order is being prepared for dispatch...</p>
      <span class="block bg-yellow-400 text-white py-2 px-4 mt-2 rounded-md font-semibold pulse">
        Order Ready for Dispatch
      </span>
    </div>
  </div>
</body>
</html>
